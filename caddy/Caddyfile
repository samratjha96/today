{
	admin off
	servers {
		protocols h1 h2 h2c
	}
	log {
		output stderr
		format console
		level DEBUG
	}
}

:80 {
	# Match requests for today service and localhost
	@host {
		host localhost localhost:80 today.techbrohomelab.xyz
	}

	handle @host {
		# Global security headers
		header {
			X-Content-Type-Options "nosniff"
			X-XSS-Protection "1; mode=block"
			X-Frame-Options "SAMEORIGIN"
			Referrer-Policy "strict-origin-when-cross-origin"
			-Server
			-X-Powered-By
		}

		# API requests - Python backend (strip prefix)
		@api-python {
			path /api/python/*
		}
		handle @api-python {
			uri strip_prefix /api/python
			reverse_proxy today-python-backend:8020
		}

		@api {
			path /api/*
		}
		handle @api {
			uri strip_prefix /api
			reverse_proxy today-go-backend:3001
		}

		# Frontend requests
		handle {
			reverse_proxy today-frontend:80
		}
	}

	# Handle all other subdomains
	@other_subdomains {
		host *.techbrohomelab.xyz
	}

	handle @other_subdomains {
		respond "Subdomain configured but no service defined" 404
	}

	handle_errors {
		respond "Error: {err.status_code} {err.status_text}"
	}
}
